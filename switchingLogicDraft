// ALL OFF STATE
mixerMaster.gain(0, ON);
mixerDelayIn.gain(0, OFF);
mixerReverbIn.gain(0, OFF);
mixerReverbIn.gain(1, OFF);


// REVERB SWITCHES ON
++numOfFxEnabled

set mixerMaster dryWet balance

mixerFx.gain(eReverb.index, ON);

if (eDelay.isOn)
  mixerFx.gain(eDelay.index, OFF);
  mixerReverbIn.gain(0, OFF);
  mixerReverbIn.gain(3, ON);
else
  mixerReverbIn.gain(0, ON);


// REVERB SWITCHES OFF
--numOfFxEnabled

zero mixerReverbIn inputs

if (eDelay.isOn)
  mixerFx.gain(eDelay.index, ON);
else
  mixerMaster.gain(0, ON);


// DELAY SWITCHES ON
++numOfFxEnabled

set mixerMaster dryWet balance

if (eReverb.isOn)
  mixerReverbIn.gain(0, OFF);
  mixerReverbIn.gain(3, ON);
else
  mixerFx.gain(2, ON);

mixerDelayIn.gain(0, ON);
